{% extends "/editeur/layoutEditeur.twig" %}
{% block content %}
        <img src="img/{{session.chemin_img_editeur}}" >
        <p> Votre Numéro Siret : {{session.siret}}</p>
        <p> Votre Nom de Société : {{session.nom_societe}}</p>
        <p> Votre Adresse : {{session.adresse_editeur}}</p>
        </br>
        </br>
        <form action="/updateprofilediteur" method="POST" > 

