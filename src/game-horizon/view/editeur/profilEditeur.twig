        </br>
        </br>
        <label for="login-editeur"> Votre Login: </label>
        <input type="text" class="login-editeur" id="login-editeur" name="login-editeur" value = "{{session.login_editeur}}"/>
        </br>
        </br>
        <label for="password-editeur"> Changer de Mot de Passe : </label>
        <input type="password" class="password-editeur" id="password-editeur" name="password-editeur"/>
        </br>
        </br>
        <label for="bis-password-editeur"> Confirmer votre Mot de Passe : </label>
        <input type="password" class="bis-password-editeur" id="bis-password-editeur" name="bis-password-editeur"/>
        </br>
        </br>
            <button type="submit">Modifier</button>
        </form>
        </div> 
